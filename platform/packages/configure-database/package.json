{
  "name": "@codefi-assets-and-payments/configure-database",
  "version": "0.0.3",
  "description": "Codefi database configuration script",
  "license": "Apache",
  "main": "dist/index.js",
  "files": [
    "src",
    "dist",
    "cli.js"
  ],
  "scripts": {
    "build": "tsc",
    "test": "jest src",
    "test:cov": "jest src --coverage",
    "lint": "eslint '{src,apps,libs,test}/**/*.ts'",
    "prettier": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "prettier:check": "prettier --check \"src/**/*.ts\" \"test/**/*.ts\"",
    "release": "standard-version"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@types/jest": "^25.1.4",
    "@types/node": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "dotenv": "^8.2.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^6.10.0",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "jest-create-mock-instance": "^1.1.0",
    "lint-staged": "^10.0.9",
    "prettier": "^1.19.1",
    "standard-version": "^8.0.0",
    "ts-jest": "^26.0.0",
    "typescript": "^4.0.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "testRegex": ".test.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.{ts,js}",
      "!**/*Module.ts"
    ],
    "testEnvironment": "node",
    "coverageThreshold": {
      "global": {
        "statements": 0,
        "branches": 0,
        "functions": 0,
        "lines": 0
      }
    },
    "coverageDirectory": "./coverage"
  },
  "lint-staged": {
    "**/*.{js,ts}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-push": "npm test"
    }
  },
  "dependencies": {
    "@types/pg": "^7.14.4",
    "pg": "^8.3.0"
  },
  "bin": {
    "configure-database": "./cli.js"
  }
}
